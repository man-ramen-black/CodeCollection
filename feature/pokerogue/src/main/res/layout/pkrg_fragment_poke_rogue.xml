<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.black.feature.pokerogue.ui.PokeRogueViewModel" />
        <variable
            name="selectedTypeAdapter"
            type="com.black.feature.pokerogue.ui.TypeAdapter" />
        <variable
            name="typeSelectAdapter"
            type="com.black.feature.pokerogue.ui.TypeAdapter" />
        <variable
            name="damageAdapter"
            type="com.black.feature.pokerogue.ui.DamageAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selected_type_recycler_view"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/top"
            app:layout_constraintBottom_toTopOf="@id/type_select_recycler_view"
            app:layout_constraintLeft_toLeftOf="@id/top"
            app:layout_constraintRight_toLeftOf="@id/damage_recycler_view"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:adapter="@{selectedTypeAdapter}"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/damage_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/top"
            app:layout_constraintBottom_toTopOf="@id/type_select_recycler_view"
            app:layout_constraintLeft_toRightOf="@id/selected_type_recycler_view"
            app:layout_constraintRight_toRightOf="@id/top"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:adapter="@{damageAdapter}"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/type_select_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/top"
            app:layout_constraintLeft_toLeftOf="@id/top"
            app:layout_constraintRight_toRightOf="@id/top"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="9"
            android:adapter="@{typeSelectAdapter}"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_refresh"
            android:onClick="@{_-> webView.reload()}"
            app:layout_constraintTop_toTopOf="@id/top"
            app:layout_constraintRight_toRightOf="@id/top"
            android:layout_margin="15dp"
            />

        <com.black.core.webkit.BKWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top"
            app:layout_constraintBottom_toBottomOf="parent"
            url="@{viewModel.url}"
            onPageStarted="@{(view, url, favicon) -> viewModel.onPageStarted(url)}"
            onPageFinished="@{(view, url, isError) -> viewModel.onPageFinished(url, isError)}"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/web_view"
            app:layout_constraintBottom_toBottomOf="@id/web_view"
            app:layout_constraintLeft_toLeftOf="@id/web_view"
            app:layout_constraintRight_toRightOf="@id/web_view"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
            />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/web_view"
            app:layout_constraintBottom_toBottomOf="@id/web_view"
            app:layout_constraintLeft_toLeftOf="@id/web_view"
            app:layout_constraintRight_toRightOf="@id/web_view"
            android:src="@drawable/ic_play"
            android:onClick="@{_->viewModel.onClickPlay()}"
            android:visibility="@{viewModel.url == null ? View.VISIBLE : View.GONE}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>