<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.black.app.ui.main.usagetimer.view.UsageTimerView.ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        >

        <com.black.app.view.BKChronometer
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/close"
            android:layout_marginRight="7dp"
            android:textColor="@color/text_color"
            />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/timer"
            app:layout_constraintRight_toRightOf="parent"

            android:background="@drawable/bt_dark_circle"
            android:src="@drawable/ic_close"
            android:scaleType="fitCenter"
            android:onClick="@{() -> viewModel.onClickClose()}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>