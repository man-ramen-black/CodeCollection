<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="data"
            type="androidx.navigation.NavDestination" />

        <variable
            name="viewModel"
            type="com.black.code.ui.example.ExampleViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bt_transparent_square"
        android:onClick="@{() -> viewModel.onItemClick(data)}"
        >
        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:text='@{data.label}'
            />
    </LinearLayout>
</layout>
