<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.black.app.ui.example.service.ServiceFragment" />

        <variable
            name="viewModel"
            type="com.black.app.ui.example.service.ServiceViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/RootLayout"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewTitle"
                android:text="@{fragment.title}"
                />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ForegroundService"
                android:checked="@={viewModel.foregroundServiceChecked}"
                android:onCheckedChanged="@{(view, checked) -> viewModel.onCheckedChangedForegroundService(checked)}"
                />
        </LinearLayout>
    </ScrollView>
</layout>