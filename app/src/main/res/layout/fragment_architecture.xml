<?xml version="1.0" encoding="utf-8"?>
<!-- DataBinding의 기본 : <layout>으로 감싸야 Binding 클래스가 생성됩니다. -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
       <variable
           name="fragment"
           type="com.black.code.ui.example.architecture.ArchitectureFragment" />

        <variable
            name="viewModel"
            type="com.black.code.ui.example.architecture.ArchitectureFragment.ViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/RootLayout"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewTitle"
            android:text="@{fragment.title}"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MVC"
            android:onClick='@{() -> viewModel.onClick("MVCActivity")}'
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MVVM"
            android:onClick='@{() -> viewModel.onClick("MVVMActivity")}'
            />
    </LinearLayout>

</layout>